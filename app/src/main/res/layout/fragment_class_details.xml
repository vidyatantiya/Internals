<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg"
    android:paddingTop="34dp"
    tools:context=".ClassDetailsFragment">

    <TextView
        android:id="@+id/Subjectname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DBMS"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="50dp"
        android:textSize="34dp"
        android:fontFamily="@font/noyhsemilight"

        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CSE22"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="50dp"
        android:textSize="34dp"
        android:fontFamily="@font/noyhsemilight"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="56"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/section"
        android:textSize="89dp"
        android:fontFamily="@font/noyhsemilight"
        android:layout_marginTop="80dp"/>

    <TextView
        android:id="@+id/students"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Students in this class"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/noyhsemilight"
        android:layout_marginTop="12dp"
        android:textSize="23dp"
        app:layout_constraintTop_toBottomOf="@id/number"
        android:textColor="#404040"
        />

    <View
        android:layout_width="240dp"
        android:layout_height="4dp"
        app:layout_constraintTop_toBottomOf="@id/pastAssignments"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:background="@color/blue" />

    <TextView
        android:id="@+id/pastAssignments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Past Assignments"
        android:textColor="@color/white"
        android:layout_marginEnd="85dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/students"
        android:textSize="34dp"
        android:fontFamily="@font/noyhsemilight"
        android:layout_marginTop="70dp"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pastAssignments"
        app:cardElevation="10dp"

        android:layout_marginTop="23dp"
        app:cardBackgroundColor="#262a35"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ASSIGNMENT 1"
            android:textSize="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="23dp"
            android:layout_marginBottom="12dp"
            android:textStyle="bold"
            android:fontFamily="@font/noyhsemilight"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3/1/2023"
            android:textSize="18dp"
            android:layout_marginTop="45dp"
            android:layout_marginStart="23dp"
            android:layout_marginBottom="12dp"
            android:textStyle="bold"
            android:fontFamily="@font/noyhsemilight"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weightage"
            android:textSize="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="230dp"
            android:textStyle="bold"
            android:fontFamily="@font/noyhsemilight"
            android:textColor="#808080"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="260dp"
            android:layout_marginBottom="12dp"
            android:textStyle="bold"
            android:fontFamily="@font/noyhsemilight"
            android:textColor="#808080"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card1"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#262a35"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="QUIZ 2"
            android:textSize="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="23dp"
            android:layout_marginBottom="12dp"
            android:textStyle="bold"
            android:fontFamily="@font/noyhsemilight"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="23/1/2023"
            android:textSize="18dp"
            android:layout_marginTop="45dp"
            android:layout_marginStart="23dp"
            android:layout_marginBottom="12dp"
            android:textStyle="bold"
            android:fontFamily="@font/noyhsemilight"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weightage"
            android:textSize="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="230dp"
            android:textStyle="bold"
            android:fontFamily="@font/noyhsemilight"
            android:textColor="#808080"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0.5"
            android:textSize="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="250dp"
            android:layout_marginBottom="12dp"
            android:textStyle="bold"
            android:fontFamily="@font/noyhsemilight"
            android:textColor="#808080"
            />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/addBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card2"
        android:layout_marginStart="64dp"
        android:text="Add"
        android:padding="12dp"
        android:textSize="16dp"
        android:fontFamily="@font/noyhsemilight"
        android:textAllCaps="false"
        app:cornerRadius="15dp"
        />

    <Button
        android:id="@+id/exportBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/addBtn"
        app:layout_constraintTop_toBottomOf="@id/card2"
        android:text="Export"
        android:padding="12dp"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/noyhsemilight"
        android:textAllCaps="false"
        app:cornerRadius="15dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>